Proceso sin_titulo
	// Pedir el radio de un círculo y calcular su área. A=PI*r^2.
	
	// Definición / Declaración de variables 
	Definir radio_circulo como Real;
	Definir area como Real;
	
	// Salida
	escribir " Digite el radio del circulo ";
	
	// entrada 
	leer radio_circulo;
	
	// Proceso
	area= PI*(radio_circulo*radio_circulo);
	
	
	// operaciones de salida 
	escribir "El área del circulo es: " , area;
FinProceso
